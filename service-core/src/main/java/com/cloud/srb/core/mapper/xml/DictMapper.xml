<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.srb.core.mapper.DictMapper">

    <insert id="insertBatch">
        insert into dict (id ,parent_id ,name ,value ,dict_code) values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id} ,
            #{item.parentId} ,
            #{item.name} ,
            #{item.value} ,
            #{item.dictCode}
            )
        </foreach>
    </insert>
    <select id="listByParentId" resultType="com.cloud.srb.core.pojo.entity.Dict">
        select id,name ,value ,dict_code from dict where parent_id = #{parentId}
    </select>
</mapper>
